// TODO: Double check when properties
// TODO: Ctrl+j not working in terminal
[
  // =============== Globals ===============
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "alt+x",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "ctrl+shift+z",
    "command": "toggleVim"
  },
  {
    // Override (Mac)
    "key": "cmd+w",
    "command": "workbench.action.closeWindow"
  },
  {
    // Override
    "key": "alt-left",
    "command": "workbench.action.navigateBack"
  },
  {
    // Override
    "key": "alt-right",
    "command": "workbench.action.navigateForward"
  },
  {
    // Override
    "key": "ctrl+alt+s",
    "command": "workbench.action.openGlobalSettings"
  },
  {
    "key": "ctrl+shift+alt+s",
    "command": "workbench.action.openWorkspaceSettings"
  },
  {
    "key": "ctrl+alt+k",
    "command": "workbench.action.openDefaultKeybindingsFile"
  },
  {
    "key": "ctrl+shift+alt+k",
    "command": "workbench.action.openGlobalKeybindingsFile"
  },
  {
    "key": "ctrl+alt+=",
    "command": "workbench.action.increaseViewSize"
  },
  {
    "key": "ctrl+alt+-",
    "command": "workbench.action.decreaseViewSize"
  },
  {
    "key": "ctrl+alt+]",
    "command": "workbench.action.quickSwitchWindow"
  },
  {
    "key": "ctrl+alt+[",
    "command": "workbench.action.quickSwitchWindow"
  },
  {
    // See: https://github.com/asvetliakov/vscode-neovim/issues/677
    "key": "Escape",
    "command": "vscode-neovim.escape",
    "when": "editorTextFocus && neovim.init"
  },
  {
    // =============== File explorer focused ===============
    "key": "alt+shift+r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "ctrl+alt+i f",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "ctrl+alt+i d",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    // Override (Mac)
    // Stop enter from renaming file
    "key": "enter",
    "command": "list.select",
    "when": "listFocus"
  },
  {
    // =============== Window commands ===============
    // Used to go to editor from terminal
    "key": "shift+ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "alt+1",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "alt+1",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletFocus && explorerViewletVisible"
  },
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "explorerViewletFocus && explorerViewletVisible"
  },
  {
    "key": "alt+3",
    "command": "workbench.action.findInFiles",
    "when": "!searchInputBoxFocus"
  },
  {
    "key": "alt+3",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "searchInputBoxFocus && searchViewletVisible"
  },
  {
    // TODO: doesn't work when focused on result list
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "searchInputBoxFocus && searchViewletVisible"
  },
  {
    "key": "alt+4",
    "command": "workbench.view.debug"
  },
  {
    "key": "alt+4",
    "command": "workbench.action.toggleSidebarVisibility",
    // TODO: need detection when debug viewlet is visible
    "when": "!searchViewletVisible && !explorerViewletVisible"
  },
  {
    "key": "alt+9",
    "command": "workbench.view.git"
  },
  {
    "key": "alt+9",
    "command": "workbench.action.toggleSidebarVisibility",
    // TODO: need detection when git viewlet is visible
    "when": "!searchViewletVisible && !explorerViewletVisible"
  },
  {
    // Override
    "key": "alt+f12",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    // Override
    "key": "alt+f12",
    "command": "workbench.action.terminal.focus",
    "when": "!terminalFocus"
  },
  {
    // =============== Tab management ===============
    "key": "ctrl+alt+l",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+alt+h",
    "command": "workbench.action.previousEditor"
  },
  // =============== Editor focused ===============
  {
    "key": "ctrl+shift+f",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && !editorHasSelection && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+f",
    "command": "editor.action.formatSelection",
    "when": "editorHasDocumentSelectionFormattingProvider && editorHasSelection && editorTextFocus && !editorReadonly"
  },
  {
    // Override
    "key": "f3",
    "command": "editor.action.goToDeclaration",
    "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  {
    // Override
    "key": "f2",
    "command": "editor.action.showHover",
    "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  {
    "key": "alt+shift+r",
    "command": "editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly && !neovim.init"
  },
  {
    "key": "ctrl+shift+/",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly && !neovim.init"
  },
  {
    "key": "ctrl+left",
    "command": "cursorWordStartLeft",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+right",
    "command": "cursorWordEndRight",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+left",
    "command": "cursorWordStartLeftSelect",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+right",
    "command": "cursorWordEndRightSelect",
    "when": "editorTextFocus"
  },
  {
    // VScode Neovim
    "key": "ctrl+c",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'",
    "args": "<C-c>"
  },
  {
    "key": "ctrl+g",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'",
    "args": "<C-g>"
  },
  {
    "key": "ctrl+f",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'",
    "args": "<C-f>"
  },
  {
    "key": "ctrl+/",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'",
    "args": "<C-/>"
  },
  {
    "key": "shift+ctrl+/",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'",
    "args": "<C-?>"
  }
]
