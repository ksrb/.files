set surround        " vim-surround emulation
set hlsearch        " Progressive highlighting while searching
set relativenumber  " Show line numbers relative to cursor
set number          " Absolute line number at cursor

" Ctrl + hjkl to switch splits
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
